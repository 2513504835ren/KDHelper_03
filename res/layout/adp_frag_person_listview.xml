<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="20dp"
    android:paddingTop="5dp">

    <ImageView 
        android:id="@+id/iv_adp_person_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:src="@drawable/icon_usercenter_setting"
        />
    
    <TextView 
        android:id="@+id/tv_adp_person"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="个人账户"
        android:textSize="16sp"
        android:textColor="@android:color/black"
		android:layout_centerVertical="true"
		android:layout_toRightOf="@id/iv_adp_person_icon"
		android:layout_marginLeft="15dp"
		
		
        />
    
    <ImageView 
        android:id="@+id/iv_adp_person_forward"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/personal_open"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        />
    
</RelativeLayout>
